
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if the user is a participant in the new data being written
    function isParticipant(data) {
       return isSignedIn() && (request.auth.uid in data.participants);
    }

    // --- Users ---
    // Strict: Only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /notifications/{notificationId} {
        allow read, update, create, list: if isOwner(userId);
      }
    }
    
    // --- Carriers ---
    match /carriers/{carrierId} {
      allow read: if true; // Public profiles
      // FIXED: Only the carrier themselves can edit their profile
      allow write: if isOwner(carrierId);
    }

    // --- Notifications (Root Collection) ---
    match /notifications/{notificationId} {
        // This rule is tricky. A user should only be able to list their own notifications.
        // This relies on the client query being `where('userId', '==', request.auth.uid)`
        allow list: if isSignedIn() && request.query.where.size() > 0 && request.query.where.userId == request.auth.uid;
        allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
        // Create should ideally be server-side. If client-side, restrict it.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }


    // --- Trips ---
    match /trips/{tripId} {
      // READ LOGIC:
      // 1. Owner can read.
      // 2. OR any signed-in user (like a carrier) can read if status is 'Awaiting-Offers' (Public market).
      // 3. OR if the user is the assigned carrier for the trip.
      allow read: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        resource.data.status == 'Awaiting-Offers' ||
        resource.data.carrierId == request.auth.uid
      );
      
      // LIST LOGIC: Allow querying if you are the owner or if you are querying for public trips
      allow list: if isSignedIn(); 

      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      
      // FIXED: Update restricted to owner ONLY (or carrier under specific conditions)
      allow update: if isSignedIn() && (isOwner(resource.data.userId) || resource.data.carrierId == request.auth.uid);
      
      allow delete: if isOwner(resource.data.userId);

      // --- Offers (Sub-collection) ---
      match /offers/{offerId} {
        // Only Trip Owner OR Offer Owner can see the offer
        allow read, list: if isSignedIn() && (
           get(/databases/$(database)/documents/trips/$(tripId)).data.userId == request.auth.uid ||
           resource.data.carrierId == request.auth.uid
        );
        
        // A carrier creates an offer for a trip.
        allow create: if isSignedIn() && isOwner(request.resource.data.carrierId);
        
        // FIXED: Only offer owner can update their offer
        allow update: if isSignedIn() && isOwner(resource.data.carrierId);
        allow delete: if isSignedIn() && isOwner(resource.data.carrierId);
      }
    }

    // --- Bookings ---
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      
      allow read: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        isOwner(resource.data.carrierId)
      );
      
      // FIXED: Updates require complex logic (e.g., User pays, Carrier confirms)
      // For now, strict check: user or carrier involved can update
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        isOwner(resource.data.carrierId)
      );
      
      allow delete: if false; // Bookings usually shouldn't be deleted, only cancelled
    }

    // --- Ratings ---
    match /ratings/{ratingId} {
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow read: if true;
      allow update, delete: if false;
    }

    // --- Chats ---
    match /chats/{chatId} {
      // FIXED: Handle 'create' (request.resource) and 'read/update' (resource) separately
      allow create: if isParticipant(request.resource.data);
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.participants);
       // Allow listing chats where the user is a participant.
      allow list: if isSignedIn() && request.query.where[0][2] == request.auth.uid;

      match /messages/{messageId} {
        // Read parent chat to check participation
        allow read, create: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow update, delete: if false;
      }
    }
  }
}
