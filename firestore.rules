rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // A function that returns true whether a user is signed in or not,
    // bypassing all auth checks during development.
    function isSignedIn() {
      return true;
    }

    // All collections are readable/writable if the custom isSignedIn function returns true.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
